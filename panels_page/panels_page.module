function panels_page_get_router($path) {
  static $routers = array();
  if (!isset($routers[$path])) {
    $routers[$path] = array();
    // We left join because of cases like node/%/edit, where our loader catches
    // a load with tail args that are intended for another router.
    // TODO Again, this hardcodes one router per-path
    $result = db_query_range("SELECT * FROM {menu_router} AS m LEFT JOIN {panels_page_router} AS p ON p.path = m.path WHERE m.path LIKE ('%s%%') ORDER BY m.fit DESC", $path, 0, 1);
    while ($row = db_fetch_array($result)) {
      $routers[$row['path']][] = $row;
    }
  }
  return $routers[$path];
}

// TODO probably remove this, it's likely cruft.
function panels_page_native_loader_path($panel_page) {
  if (strpos('%', $panel_page->path) === FALSE) {
    return $panel_page->path;
  }
  $map = explode('/', $panel_page->path);
  reset($panel_page->arguments);
  foreach ($map as $arg => $segment) {
    if ($segment == '%') {
      $argument = current($panel_page->arguments);
      $map[$arg] = !empty($argument['loader']) ? '%' . $argument['loader'] : '%';
      next($panel_page->arguments);
    }
  }
  return implode('/', $map);
}

